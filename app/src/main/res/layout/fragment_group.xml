<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/iv_group_banner"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/bg_banner"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="fitXY"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/color_a3a09f"
            app:layout_constraintTop_toBottomOf="@id/iv_group_banner"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_group_name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/iv_group_banner">
            <View
                android:id="@+id/group_line_01"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/color_a3a09f"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/tv_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="동작구 상도1동 7팀"
                android:layout_gravity="center_vertical"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginStart="5dp"
                app:layout_constraintStart_toEndOf="@id/group_line_01"
                app:layout_constraintTop_toTopOf="@id/group_line_01"
                app:layout_constraintBottom_toBottomOf="@id/group_line_01"/>
            <ImageView
                android:id="@+id/iv_group_down"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_down"
                android:layout_marginEnd="5dp"
                android:padding="5dp"
                app:layout_constraintEnd_toStartOf="@id/group_line_02"
                app:layout_constraintTop_toTopOf="@id/group_line_02"
                app:layout_constraintBottom_toBottomOf="@id/group_line_02"/>
            <View
                android:id="@+id/group_line_02"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:background="@color/color_a3a09f"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/color_a3a09f"
            app:layout_constraintBottom_toBottomOf="@id/layout_group_name"/>
        <LinearLayout
            android:id="@+id/layout_group_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/layout_group_name">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="이번 주"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="그룹 점수"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_group_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="52"
                    android:layout_marginTop="10dp"
                    android:textSize="64sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="내 점수\n"
                    android:textSize="20sp"/>
                <TextView
                    android:id="@+id/tv_home_group_my_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:layout_marginTop="10dp"
                    android:textSize="64sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="25dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:text="우리 그룹"
                    android:textSize="20sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="순위"
                        android:textSize="20sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:src="@drawable/ic_rank"
                        android:layout_marginStart="5dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/tv_group_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tv_group_line"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/tv_group_line"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textSize="60sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_group_rating"
                        app:layout_constraintEnd_toStartOf="@id/tv_group_total"/>
                    <TextView
                        android:id="@+id/tv_group_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9"
                        android:textSize="48sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="30dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_group_rating"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:id="@+id/group_line_03"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/layout_group_info"
            android:background="@color/grey_line"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_my_group"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            app:layout_constraintTop_toTopOf="@id/group_line_03">
            <TextView
                android:id="@+id/tv_group_my"
                android:text="내 그룹"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/notosans_bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_group_people"
                android:overScrollMode="never"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_group_my"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/group_line_04"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/layout_my_group"
            android:background="@color/grey_line"/>
        <TextView
            android:id="@+id/tv_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/group_line_04"
            android:textSize="20sp"
            android:text="@string/group_default"
            android:gravity="center"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_group_find"
            android:layout_marginBottom="20dp"
            android:text="그룹 찾기"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_default"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</layout>