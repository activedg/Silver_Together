<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_user"
    android:layout_width="match_parent"
    android:layout_height="60dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_item_user_profile"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@mipmap/ic_launcher_round"/>
    <TextView
        android:id="@+id/tv_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="이름"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@id/iv_item_user_profile"
        app:layout_constraintTop_toTopOf="@id/iv_item_user_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_user_profile"/>
    <ImageView
        android:id="@+id/iv_item_user_caution"
        android:layout_width="35dp"
        android:layout_height="41dp"
        android:scaleType="fitXY"
        android:padding="5dp"
        android:visibility="invisible"
        android:src="@drawable/ic_caution"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/tv_item_user_name"
        app:layout_constraintTop_toTopOf="@id/iv_item_user_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_item_user_profile"/>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>