<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_profile_banner"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/bg_banner"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/iv_profile_bg"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:src="@drawable/bg_profile"
        android:scaleType="fitXY"
        android:alpha="0.8"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_banner" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="@id/iv_profile_bg"
        app:layout_constraintEnd_toEndOf="@id/iv_profile_bg">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_image_select" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_setting"
            android:layout_marginStart="10dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="김푸앙"
                android:textSize="20sp"
                android:textColor="@color/white"/>
            <ImageView
                android:id="@+id/iv_profile_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_profile"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="62세"
                android:textColor="@color/white"
                android:textSize="20sp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_profile_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="서울 동작구 상도 123번길 45"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="소속 그룹 목록"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/iv_profile_bg"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/profile_line1"
        android:layout_width="1dp"
        android:layout_height="142dp"
        android:background="@color/color_b9b9b9"
        android:layout_marginTop="7dp"
        android:layout_marginStart="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_group"/>
    <View
        android:id="@+id/profile_line2"
        android:layout_width="1dp"
        android:layout_height="142dp"
        android:background="@color/color_b9b9b9"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_group"/>
    <View
        android:layout_width="1dp"
        android:layout_height="142dp"
        android:background="@color/color_b9b9b9"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_group"/>
    <TableLayout
        android:id="@+id/table_layout_profile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:weightSum="4"
        app:layout_constraintTop_toTopOf="@id/profile_line1"
        app:layout_constraintBottom_toBottomOf="@id/profile_line1"
        app:layout_constraintStart_toEndOf="@id/profile_line1"
        app:layout_constraintEnd_toStartOf="@id/profile_line2">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_b9b9b9"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/grey_line"
            android:weightSum="2"
            android:layout_weight="1" >
            <TextView
                android:layout_width="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="소속 그룹"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="그룹의 관심사"
                android:textStyle="bold"
                android:textSize="20sp"/>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_b9b9b9"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <TextView
                android:layout_width="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="동작구 상도1동 7팀"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="기본 그룹"
                android:textSize="20sp"/>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_b9b9b9"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <TextView
                android:layout_width="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="걸어봐요"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="걷기"
                android:textSize="20sp"/>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_b9b9b9"/>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >
            <TextView
                android:layout_width="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="잘할테요"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="테니스"
                android:textSize="20sp"/>
        </TableRow>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_b9b9b9"/>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>